#############################################
# mcp-hub Environment Example (copy to .env) #
#############################################

# Core Hub
NODE_ENV=production
PORT=37373
# DEBUG=mcp-hub:*
# LOG_LEVEL=info

# =============================================================================
# Authentication System Configuration
# =============================================================================

# Database Configuration (Required for Authentication)
DATABASE_URL=postgresql://username:password@localhost:5432/mcp_hub

# JWT Configuration (Required)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_REFRESH_SECRET=another-super-secret-refresh-key-different-from-access
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=mcp-hub
JWT_AUDIENCE=mcp-hub-users

# OAuth Providers (Optional - configure only the ones you want to use)

# Google OAuth (for authentication - different from Google Workspace below)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:37373/api/auth/oauth/google/callback

# GitHub OAuth (for authentication - different from GitHub token below)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_REDIRECT_URI=http://localhost:37373/api/auth/oauth/github/callback

# Microsoft/Azure OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:37373/api/auth/oauth/microsoft/callback
MICROSOFT_TENANT=common

# Base URL (Used for OAuth redirects)
BASE_URL=http://localhost:37373

# OAuth Encryption Key (Optional - will use JWT secret if not provided)
OAUTH_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Sidecar execution (wrap Python commands via docker exec)
# Example: PYTHON_SIDECAR_EXEC=docker exec python-mcp uvx
PYTHON_SIDECAR_EXEC=

# Wix
WIX_API_TOKEN=
WIX_OAUTH_CLIENT_ID=your-wix-oauth-client-id
WIX_OAUTH_REDIRECT_URL=http://localhost:37373/api/oauth/callback
WIX_AUTO_AUTH=true
WIX_AUTH_TIMEOUT=300
DISABLE_WIX=false

# Google Workspace (updated for bridge networking)
GOOGLE_WORKSPACE_AUTO_AUTH=true
GOOGLE_WORKSPACE_HOST=localhost
GOOGLE_WORKSPACE_PORT=8001
GOOGLE_WORKSPACE_AUTH_TIMEOUT=300
DISABLE_GOOGLE_WORKSPACE=false
GOOGLE_APPLICATION_CREDENTIALS=/app/config/google-drive-credentials.json

# GitHub (personal access token)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token

# Brave Search
BRAVE_API_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Slack
SLACK_TOKEN=

# AWS (never commit real credentials)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-2

# Obsidian
OBSIDIAN_API_URL=https://localhost:27124
OBSIDIAN_API_KEY=your-obsidian-api-key
NODE_TLS_REJECT_UNAUTHORIZED=0

# Database examples
POSTGRES_CONNECTION_STRING=postgresql://user:password@host:5432/dbname

# Optional advanced
# IDLE_TIMEOUT_MS=300000

# Additional service variables (recovered)
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
S3_MAX_BUCKETS=50
DDB_MCP_READONLY=true
FASTMCP_LOG_LEVEL=ERROR
GITLAB_API_TOKEN=your-gitlab-token
GITLAB_URL=https://gitlab.com
SLACK_TOKEN=your-slack-token

