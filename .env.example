#############################################
# mcp-hub Environment Example (copy to .env) #
#############################################

# Core Hub
NODE_ENV=production
PORT=37373
# DEBUG=mcp-hub:*
# LOG_LEVEL=info

# Sidecar execution (wrap Python commands via docker exec)
# Example: PYTHON_SIDECAR_EXEC=docker exec python-mcp uvx
PYTHON_SIDECAR_EXEC=

# Wix
WIX_API_TOKEN=
WIX_OAUTH_CLIENT_ID=your-wix-oauth-client-id
WIX_OAUTH_REDIRECT_URL=http://localhost:37373/api/oauth/callback
WIX_AUTO_AUTH=true
WIX_AUTH_TIMEOUT=300
DISABLE_WIX=false

# Google Workspace (updated for bridge networking)
GOOGLE_WORKSPACE_AUTO_AUTH=true
GOOGLE_WORKSPACE_HOST=localhost
GOOGLE_WORKSPACE_PORT=8001
GOOGLE_WORKSPACE_AUTH_TIMEOUT=300
DISABLE_GOOGLE_WORKSPACE=false
GOOGLE_APPLICATION_CREDENTIALS=/app/config/google-drive-credentials.json

# GitHub (personal access token)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token

# Brave Search
BRAVE_API_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Slack
SLACK_TOKEN=

# AWS (never commit real credentials)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-2

# Obsidian
OBSIDIAN_API_URL=https://localhost:27124
OBSIDIAN_API_KEY=your-obsidian-api-key
NODE_TLS_REJECT_UNAUTHORIZED=0

# Database examples
POSTGRES_CONNECTION_STRING=postgresql://user:password@host:5432/dbname

# Optional advanced
# IDLE_TIMEOUT_MS=300000

# Additional service variables (recovered)
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
S3_MAX_BUCKETS=50
DDB_MCP_READONLY=true
FASTMCP_LOG_LEVEL=ERROR
GITLAB_API_TOKEN=your-gitlab-token
GITLAB_URL=https://gitlab.com
SLACK_TOKEN=your-slack-token

