{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/allowed/directory"
      ],
      "description": "Filesystem server - secure file operations"
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token-here"
      },
      "description": "GitHub's official MCP Server for repository operations"
    },
    "wix-mcp-remote": {
      "type": "http",
      "url": "https://mcp.wix.com/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_WIX_API_TOKEN"
      },
      "description": "Wix MCP Server - requires OAuth authentication for Wix site management"
    }
  }
}
